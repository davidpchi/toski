{
    "$schema": "https://biomejs.dev/schemas/1.0.0/schema.json",
    "organizeImports": {
        "enabled": false
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true
        }
    },
    "formatter": {
        "enabled": true,
        "indentStyle": "space",
        "indentSize": 4,
        "lineWidth": 150
    },
    "javascript": {
        "formatter": {
            "quoteProperties": "preserve"
        }
    }
}
